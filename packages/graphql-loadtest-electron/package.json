{
  "name": "graphql-loadtest-electron",
  "version": "0.0.1",
  "author": "marhaupe <marhaupe97@gmail.com>",
  "homepage": "https://github.com/marhaupe/graphql-loadtest",
  "license": "MIT",
  "description": "loadtest your graphql servers",
  "main": "app/main/.parcel/main.js",
  "scripts": {
    "start": "run-s main:build watch",
    "release:all": "run-s \"release -mwl\"",
    "release": "run-s parcel:build \"electron:build {@}\" --",
    "watch": "run-p -r parcel:watch electron:start",
    "electron:start": "nodemon --watch app/main/.parcel --exec \"electron .\"",
    "electron:build": "electron-builder --x64 --publish=never",
    "parcel:watch": "run-p -r main:watch renderer:watch",
    "main:watch": "parcel watch app/main/main.ts --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:watch": "parcel app/renderer/index.html --port 1124 --out-dir app/renderer/.parcel/development",
    "parcel:build": "run-s main:build renderer:build",
    "main:build": "parcel build app/main/main.ts --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:build": "parcel build app/renderer/index.html --public-url ./ --out-dir app/renderer/.parcel/production",
    "test": "run-s parcel:build \"test:jest {@}\" --",
    "test:jest": "jest",
    "lint": "tslint app/**/*.ts{,x}"
  },
  "dependencies": {
    "apexcharts": "^3.10.1",
    "app-root-path": "^2.2.1",
    "electron-is-dev": "^1.1.0",
    "graphiql": "^0.16.0",
    "graphql": "^14.5.8",
    "graphql-loadtest-core": "0.0.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.15",
    "mobx": "^5.15.1",
    "mobx-react": "^6.1.4",
    "mobx-sync": "^2.1.2",
    "react": "^16.8.6",
    "react-apexcharts": "^1.3.3",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.1.2",
    "sweetalert2": "^9.4.0",
    "tailwindcss": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.x",
    "babel-jest": "^24.8.0",
    "electron": "5.0.5",
    "electron-builder": "21.1.2",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.8.6",
    "spectron": "^7.0.0",
    "typescript": "^3.5.2"
  },
  "build": {
    "productName": "graphql-loadtest",
    "appId": "com.marhaupe.graphql-loadtest",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "icon.icns"
    },
    "win": {
      "icon": "icon.ico"
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "snap",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "files": [
      "app/**",
      "!app/main/main.ts",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**",
      "!app/**/*.map"
    ],
    "directories": {
      "output": "release"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
